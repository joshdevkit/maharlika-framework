{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "maharlika/framework",
    "description": "The Skeleton for the Maharlika Php framework",
    "keywords": [
        "framework",
        "maharlika",
        "mvc"
    ],
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "maharlika/maharlika": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.4",
        "mockery/mockery": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factory\\": "database/factories/",
            "Database\\Seeder\\": "database/seeder/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php maharlika key:generate --ansi",
             "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\""
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
